  <script>
    const breadcrumbItems = {
      '/': ['Pages', 'Home'],
      '/users': ['Pages', 'Users'],
      '/users/:id/edit': ['Pages', 'Users', 'Edit'],
      '/tours': ['Pages', 'Tours'],
      // Add more URL mappings as needed
    };

    function updateBreadcrumb() {
      const path = window.location.pathname;
      const pathParts = path.split('/').filter(part => part);
      
      let breadcrumb = ['Pages'];
      let breadcrumbPath = '';
      
      pathParts.forEach((part, index) => {
        breadcrumbPath += '/' + part;
        let currentPath = breadcrumbPath;
        
        // Check if the current path is a dynamic route
        if (breadcrumbItems[currentPath]) {
          breadcrumb = breadcrumbItems[currentPath];
        } else if (breadcrumbItems[breadcrumbPath.replace(/\/[0-9a-fA-F]{8,}/, '/:id')]) {
          currentPath = breadcrumbPath.replace(/\/[0-9a-fA-F]{8,}/, '/:id');
          breadcrumb = breadcrumbItems[currentPath];
        } else {
          breadcrumb.push(part.charAt(0).toUpperCase() + part.slice(1));
        }
      });

      const breadcrumbContainer = $('#breadcrumb');
      breadcrumbContainer.empty();

      breadcrumb.forEach((item, index) => {
        if (index === breadcrumb.length - 1) {
          breadcrumbContainer.append(`<li class="breadcrumb-item text-sm text-white active" aria-current="page">${item}</li>`);
        } else {
          breadcrumbContainer.append(`<li class="breadcrumb-item text-sm"><a class="opacity-5 text-white" href="javascript:;">${item}</a></li>`);
        }
      });

      $('#page-title').text(breadcrumb[breadcrumb.length - 1]);
    }

    $(document).ready(function () {
      updateBreadcrumb();
    });
  </script>
